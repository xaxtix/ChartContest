<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="primary" format="color|reference" />
    <attr name="primary_dark" format="color|reference" />
    <attr name="signature" format="color|reference" />
    <attr name="hint_line" format="color|reference" />
    <attr name="active_line" format="color|reference" />
    <attr name="inactive_picker_chart" format="color|reference" />
    <attr name="active_picker_chart" format="color|reference" />
    <attr name="text" format="color|reference" />
    <attr name="card_background" format="color|reference" />
    <attr name="window_background" format="color|reference" />
    <attr name="popup_background" format="color|reference" />
    <attr name="ripple" format="color|reference" />
    <attr name="checkbox_inactive" format="color|reference" />

    <color name="window_background_light">#F0F0F0</color>
    <color name="window_background_dark">#151E27</color>

    <style name="LightTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="primary_dark">#FFFFFF</item>
        <item name="primary">#FFFFFF</item>
        <item name="signature">#95A2AA</item>
        <item name="hint_line">#182D3B</item>
        <item name="active_line">#bcbcbc</item>
        <item name="inactive_picker_chart">#99e2eef9</item>
        <item name="active_picker_chart">#d8baccd9</item>
        <item name="card_background">#FFF</item>
        <item name="window_background">#F0F0F0</item>
        <item name="text">#101010</item>
        <item name="popup_background">#FFF</item>
        <item name="ripple">#2c7e9db7</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="checkbox_inactive">#BDBDBD</item>
    </style>


    <style name="DarkTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="primary_dark">#242F3E</item>
        <item name="primary">#242F3E</item>
        <item name="signature">#506372</item>
        <item name="hint_line">#FFFFFF</item>
        <item name="active_line">#293648</item>
        <item name="inactive_picker_chart">#d8313D4C</item>
        <item name="active_picker_chart">#d8526679</item>
        <item name="card_background">#1D2733</item>
        <item name="window_background">#151E27</item>
        <item name="popup_background">#202D3B</item>
        <item name="ripple">#2ca4bdd2</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="text">#ececec</item>
        <item name="checkbox_inactive">#9B9B9B</item>
    </style>


</resources>

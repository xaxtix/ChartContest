<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:elevation="8dp"
        android:outlineProvider="bounds">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:text="@string/title"
            android:gravity="center"
            android:paddingStart="16dp"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/theme"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/highlight_circle"
            android:src="@drawable/ic_theme" />
    </FrameLayout>

    <com.example.isamorodov.telegramcontest.ui.ContentScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lnl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.isamorodov.telegramcontest.ui.BgView
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <com.example.isamorodov.telegramcontest.ui.fragments.ChartFragment
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp" />

            <com.example.isamorodov.telegramcontest.ui.BgView
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <com.example.isamorodov.telegramcontest.ui.fragments.ChartFragment
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp" />

            <com.example.isamorodov.telegramcontest.ui.BgView
                android:layout_width="match_parent"
                android:layout_height="32dp" />


            <com.example.isamorodov.telegramcontest.ui.fragments.ChartFragment
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp" />

            <com.example.isamorodov.telegramcontest.ui.BgView
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <com.example.isamorodov.telegramcontest.ui.fragments.ChartFragment
                android:id="@+id/chart4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp" />

            <com.example.isamorodov.telegramcontest.ui.BgView
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <com.example.isamorodov.telegramcontest.ui.fragments.ChartFragment
                android:id="@+id/chart5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp" />

            <com.example.isamorodov.telegramcontest.ui.BgView
                android:layout_width="match_parent"
                android:layout_height="42dp" />


        </LinearLayout>
    </com.example.isamorodov.telegramcontest.ui.ContentScrollView>
</LinearLayout>